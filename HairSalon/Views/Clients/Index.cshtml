@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

  <h2><u>Clients List</u></h2>

  <div>
    @if (@Model.Count == 0)
    {
      <h3><u>No Clients Added Yet!</u></h3>
    }

  @foreach (Client client in Model)
  {
    <p>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) | @client.Stylist.Name</p>
  }
  </div>

  <p>@Html.ActionLink("Add New Client", "Create")</p>
  <p>@Html.ActionLink("Back To Home", "Index")</p>